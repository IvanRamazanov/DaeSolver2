<elem description="This block represents a three-phase voltage source." view="ThreePhaseVoltageSource.png">
    <Connections>
        <pin domain="elec" name="A" x=7 y=4></pin>
        <pin domain="elec" name="B" x=26 y=4></pin>
        <pin domain="elec" name="C" x=43 y=4></pin>
        <pin domain="elec" name="N" x=26 y=66></pin>
    </Connections>
    <Parameters>
        <parm name="A" type="2" title="Amplitude, V">10</parm>
        <parm name="f" type="2" title="Frequency, Hz">50</parm>
        <parm name="phi" type="2" title="Phase, rad">0</parm>
    </Parameters>
    <InternalFlow>
        <sum>A;B;C;N</sum>
    </InternalFlow>
    <Equations>
        <equ>A.p-N.p = A*sin(2*pi*f*t + phi)</equ>
        <equ>B.p-N.p = A*sin(2*pi*f*t + phi-2*pi/3)</equ>
        <equ>C.p-N.p = A*sin(2*pi*f*t + phi+2*pi/3)</equ>
    </Equations>
</elem>
